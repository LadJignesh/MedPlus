<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10sp"
    android:orientation="vertical"
    tools:context="com.example.jigneshlad.medplus.SendReportDoctor">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MEDICINE REQUEST"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />



    <EditText
        android:id="@+id/et_FrdName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Click to choose contact"
        android:inputType="textPersonName"
        android:clickable="true"
        android:focusable="false"
        android:gravity="left"
        android:cursorVisible="false"/>

    <Spinner
        android:id="@+id/sp_med2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:background="@android:drawable/btn_dropdown"
        android:contextClickable="false"
        android:hint="Select Medicine"
        android:spinnerMode="dropdown" />

    <Button
        android:id="@+id/bt_sendemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Med"
        android:text="Send SMS"
        android:textColor="@color/cast_expanded_controller_progress_text_color"
        android:textSize="24sp" />
</LinearLayout>
